<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="mod-title">
        <h5 class="modal-title" id="exampleModalLongTitle">Send a message <br> to <%= @candidate.first_name + " " + @candidate.last_name  %> </h5>
          <p>Start a conversation in order to add  <%= @candidate.first_name + " " %>to your ATS</p>
      <div style="margin-top: 5px">
      <%= cl_image_tag @users.first.photo.key, height: 35, width: 35, style: "z-index: 1" %>
      <%= cl_image_tag @candidate.photo.key, height: 35, width: 35, style: "margin-left: -10px;" %>
    </div>
      </div>

      <div class="modal-body">
        <textarea id="description" placeholder="Type a relevant message to <%= @candidate.first_name %> "></textarea>
      <hr>
        <p>Add internal feedback note in Lever </p>
        <textarea id="text2" placeholder="Tag @team members and add comments directly in Lever"></textarea>

      <div class="mod-footer">
      <button1 type="button" class="choice" id='dis' data-dismiss="modal">Cancel </button1>
      <%= link_to export_candidate_path(@candidate), method: :post do %>
            <button1 type="button" class="choice" data-dismiss="modal" id="starting">
              Start conversation <i class="fas fa-paper-plane"></i>
            </button1>
      <% end %>
